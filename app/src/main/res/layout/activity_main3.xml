<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img"
    tools:context=".MainActivity3">

    <TextView
        android:id="@+id/bTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@color/SaddleBrown"
        android:text="Book Details"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/bId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/bTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-60dp"
        android:background="@color/SaddleBrown"
        android:ems="10"
        android:hint="id"
        android:inputType="text"
        android:padding="10dp"
        android:text=""
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/bName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/bTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-120dp"
        android:background="@color/SaddleBrown"
        android:ems="10"
        android:hint="Title"
        android:inputType="text"
        android:padding="10dp"
        android:text=""
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="20sp"/>
    <EditText
        android:id="@+id/bAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/bTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-180dp"
        android:background="@color/SaddleBrown"
        android:ems="10"
        android:hint="Author"
        android:inputType="text"
        android:padding="10dp"
        android:text=""
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/bYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/bTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-240dp"
        android:background="@color/SaddleBrown"
        android:ems="10"
        android:hint="Published Year"
        android:maxLength="4"
        android:inputType="number"
        android:padding="10dp"
        android:text=""
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="20sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/bTitle"
        android:layout_marginTop="280dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/Update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/SaddleBrown"
            android:ems="10"
            android:text="Update Details"
            android:layout_marginRight="60dp"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/Delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/SaddleBrown"
            android:ems="10"
            android:text="Delete"
            android:textColor="@color/white" />
    </LinearLayout>

</RelativeLayout>